<VirtualHost *:80>
    ServerAdmin  sitter@kde.org
    ServerName   <%= @server_name %>
    DocumentRoot <%= @document_root %>

    ErrorLog ${APACHE_LOG_DIR}/<%= @server_name %>-error.log
    CustomLog ${APACHE_LOG_DIR}/<%= @server_name %>.log combined

    # Redirect to squid
    Redirect "/" "http://<%= @server_name %>:8000/"
</VirtualHost>
