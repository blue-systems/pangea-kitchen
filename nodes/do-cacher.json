{
  "run_list": [
    "role[server-common]",
    "recipe[apt-cacher]",
    "recipe[pangea-ruby::install]",
    "recipe[geminabox]",
    "recipe[nameserver]",
    "role[private-nameserver-client]"
  ],
  "fail2ban": {
    "services": {
      "deb-squid-proxy": {
        "enabled": "true",
        "filter": "squid",
        "port": "http,https",
        "bantime": "3600",
        "maxretry": "1",
        "logpath": "/var/log/squid-deb-proxy/access.log"
      },
      "apache-403": {
        "enabled": "true",
        "filter": "apache-403",
        "port": "http,https",
        "bantime": "3600",
        "maxretry": "3",
        "findtime": "600"
      }
    }
  },
  "automatic": {
    "ipaddress": "207.154.206.103"
  }
}
