{
  "name": "jenkins-slave-arm",
  "description": "",
  "json_class": "Chef::Role",
  "default_attributes": {
    "pangea_ruby": {
      "home_user": "jenkins-slave",
      "home_user_home": "/var/lib/jenkins-slave"
    },
    "fail2ban": {
      "services": {
        "ssh": {
          "maxretry": 2,
          "bantime": "3600"
        }
      }
    },
    "docker" : {
      "user": "docker",
      "group": "docker",
      "storage_opt":  ["dm.basesize=20G"]
    },
    "swap_tuning" : {
      "minimum_size" : 7168
    }
  },
  "override_attributes": {

  },
  "chef_type": "role",
  "run_list": [
    "role[server-common]",
    "recipe[jenkins-java-trusty]",
    "recipe[jenkins-slave]",
    "recipe[pangea-ruby::install]",
    "recipe[pangea-ruby::user_home_gems]"
  ],
  "env_run_lists": {

  }
}
